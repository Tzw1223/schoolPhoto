<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextTextAccount"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="272dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="account"
        android:textColor="#BDBDBD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextAccount"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextAccount"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextAccount" />

    <CheckBox
        android:id="@+id/checkbox_rememberPsw"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/remeberPsw"
        android:layout_width="62dp"
        android:layout_height="18dp"
        android:text="记住密码"
        android:textColor="@color/my_green"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox_rememberPsw"
        app:layout_constraintStart_toEndOf="@+id/checkbox_rememberPsw"
        app:layout_constraintTop_toTopOf="@+id/checkbox_rememberPsw"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/autoLogin"
        android:layout_width="62dp"
        android:layout_height="18dp"
        android:text="自动登录"
        android:textColor="@color/my_green"
        android:textSize="12sp"

        app:layout_constraintBottom_toBottomOf="@+id/checkbox_autoLogin"
        app:layout_constraintStart_toEndOf="@+id/checkbox_autoLogin"
        app:layout_constraintTop_toTopOf="@+id/checkbox_autoLogin"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkbox_autoLogin"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="132dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toEndOf="@+id/remeberPsw"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/button_shape"
        android:text="登 陆"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="86dp"
        android:layout_height="33dp"
        android:layout_marginTop="4dp"
        android:text="注册"
        android:textAlignment="center"
        android:textColor="#A8009688"
        android:textColorHighlight="#03A9F4"
        android:textSize="16sp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/button_login"
        app:layout_constraintStart_toStartOf="@+id/button_login"
        app:layout_constraintTop_toBottomOf="@+id/button_login"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="231dp"
        android:layout_height="177dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextAccount"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextAccount"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/editTextTextAccount"
        app:srcCompat="@drawable/logo3_2" />

</androidx.constraintlayout.widget.ConstraintLayout>